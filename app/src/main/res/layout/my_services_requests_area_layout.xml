<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/tabBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tabRequests"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:elevation="20dp"
                android:background="@drawable/tab_selector"
                android:text="My Requests"
                android:textColor="?attr/android:textColorPrimary"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tabServices"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:elevation="20dp"
                android:background="@drawable/tab_selector"
                android:text="My Services"
                android:textColor="?attr/android:textColorPrimary"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/filtersContainer"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="0dp"
            android:elevation="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="3"
            android:background="?attr/background"
            app:layout_constraintTop_toBottomOf="@id/tabBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Spinner
                android:id="@+id/statusSpinner"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="0.5"
                android:background="@drawable/rounded_background"
                android:textAlignment="center"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/budgetInput"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_background"
                android:gravity="center"
                android:hint="Budget (â‚¬)"
                android:inputType="number"
                android:textSize="12sp"
                android:textColor="?attr/android:textColorPrimary"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1.5"
                android:background="@drawable/rounded_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp">

                <ImageView
                    android:id="@+id/searchIcon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_search"/>

                <EditText
                    android:id="@+id/searchInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Search..."
                    android:inputType="text"
                    android:textSize="12sp"
                    android:textColor="?attr/android:textColorPrimary"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0.7dp"
            android:background="?attr/colorOutline"
            app:layout_constraintTop_toBottomOf="@id/filtersContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ListView
            android:id="@+id/listView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingBottom="58dp"
            app:layout_constraintTop_toBottomOf="@id/filtersContainer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/navBar"
        layout="@layout/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
