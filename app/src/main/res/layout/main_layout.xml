<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/searchRowContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:baselineAligned="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/searchContainer"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_background">

                <ImageView
                    android:id="@+id/searchIcon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_search" />

                <EditText
                    android:id="@+id/searchInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Search..."
                    android:inputType="text"
                    android:textSize="14sp"
                    android:textColor="?attr/android:textColorPrimary" />
            </LinearLayout>

            <TextView
                android:id="@+id/resetFiltersBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:gravity="center"
                android:minWidth="64dp"
                android:paddingHorizontal="5dp"
                android:textStyle="bold"
                android:text="Reset filters"
                android:textSize="12sp"
                android:textColor="?attr/android:textColorPrimary"
                android:background="@null"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/filtersContainer"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="0dp"
            android:elevation="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="3"
            android:background="?attr/background"
            app:layout_constraintTop_toBottomOf="@id/searchRowContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Spinner
                android:id="@+id/firstSpinner"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_background"
                android:textAlignment="center"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/budgetInput"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_background"
                android:gravity="center"
                android:inputType="number"
                android:textSize="12sp"
                android:hint="Budget"
                android:textColor="?attr/android:textColorPrimary"/>

            <EditText
                android:id="@+id/distanceInput"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_background"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:textSize="12sp"
                android:hint="Distance (km)"
                android:textColor="?attr/android:textColorPrimary"/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0.7dp"
            android:background="?attr/colorOutline"
            app:layout_constraintTop_toBottomOf="@id/filtersContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ListView
            android:id="@+id/listView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingBottom="58dp"
            app:layout_constraintTop_toBottomOf="@id/filtersContainer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/navBar"
        layout="@layout/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
