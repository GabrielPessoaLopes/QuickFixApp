<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:minHeight="56dp"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/navbar"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/colorSurface"
        android:paddingHorizontal="8dp"
        android:paddingVertical="20dp"
        android:gravity="center"
        android:elevation="20dp"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/nav_hire"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/nav_hire_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_hire"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/nav_hire_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hire"
                android:textColor="?attr/android:textColorPrimary"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_add_request"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/nav_add_request_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/nav_add_request_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Request"
                android:textSize="12sp"
                android:textColor="?attr/android:textColorPrimary"
                android:layout_marginTop="2dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/nav_home_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/nav_home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="?attr/android:textColorPrimary"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_my_services_requests"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/my_services_requests_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_my_services_and_requests"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/nav_profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My requests"
                android:textColor="?attr/android:textColorPrimary"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/nav_settings_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/nav_settings_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="?attr/android:textColorPrimary"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>